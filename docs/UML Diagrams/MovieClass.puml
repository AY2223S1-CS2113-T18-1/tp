@startuml
!include style.puml

abstract class Media {
    +title: String
    +rating: Double
    +genre: String
    +dateWatched: Date
    +dateString: String
    +isFavourite: boolean
    +void toString()
}

class Movie {
    +void Movie(title: String, rating: Double, genre: String,
    dateWatchedString: String)
    +void toString()
}

class TvShow {
    +site: String
    +dateWatched: String
    +void TvShow(title: String, rating: Double, genre: String,
    dateWatchedString: String, site: String)
    +void toString()
}

skinparam groupInheritance 2
Media <|-down- Movie
Media <|-down- TvShow

@enduml